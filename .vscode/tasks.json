{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compileKeil",
            "type": "shell",
            "command": "${workspaceFolder}\\.vscode\\compileKeil.bat",
            "args": [
                "\"${workspaceFolder}\"",
                "\"${workspaceFolder}\\src\"",
                "main"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\build"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": false,
                "echo": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                {
                    "owner": "cpp",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "(ERROR|WARNING|NOTE|INFO) C(\\d*) IN LINE (\\d*) OF (.*?): (.*)",
                            "file": 4,
                            "line": 3,
                            "code": 2,
                            "severity": 1,
                            "message": 5
                        }
                    ]
                },
                {
                    "owner": "cpp",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "(ERROR|WARNING|NOTE|INFO) L(\\d*): (.*)",
                            "code": 2,
                            "severity": 1,
                            "message": 3,
                        },
                        {
                            "regexp": ": (.*)",
                            "line": 1,
                        },
                        {
                            "regexp": ": (.*) ((.*))",
                            "file": 1,
                        }
                    ]
                }
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "del",
            "args": [
                "/f",
                "/s",
                "/q",
                "\"${workspaceFolder}\\build\""
            ],
            "problemMatcher": []
        }
    ]
}